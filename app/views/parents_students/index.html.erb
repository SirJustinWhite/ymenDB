
<h1>Listing parents_students</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Parent</th>
      <th>Student</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @parents_students.each do |parents_student| %>
      <tr>
        <td><%= link_to "#{parents_student.parent.name}", parents_student.parent %></td>
        <td><%= link_to "#{parents_student.student.name}", parents_student.student %></td>
        <td><%= link_to 'Show', parents_student %></td>
        <td><%= link_to 'Edit', edit_parents_student_path(parents_student) %></td>
        <% if signed_in? && current_user.admin? %><td><%= link_to 'Destroy', parents_student, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

