<div class="row">
<div class="container">
      <div class="col-lg-8 col-lg-offset-2">
      <h1>Student</h1>
        <!-- ===== vCard Navigation ===== -->
        <div class="row w">
          <div class="col-md-4">
            <%= image_tag "avatar.jpg", :class => "img-responsive" %>
          <ul class="nav nav-tabs nav-stacked" id="myTab">
            <li class="active"><a href="#about">General</a></li>
            <li><a href="#profile">Grades and School</a></li>
            <li><a href="#portfolio">YMEN Info</a></li>
            <li><a href="#contact">Other</a></li>
            <li><a href="#parents">Parents</a></li>
          </ul>         
        </div><!-- col-md-4 -->

        <!-- ===== vCard Content ===== -->
          <div class="col-md-8">
            <div class="tab-content">
            
              <!-- ===== First Tab ===== -->
            <div class="tab-pane active" id="about">
              <h3><%= @student.first_name %> <%= @student.last_name %></h3>
              <h5>Student</h5>
              <hr>
              <div class="row">
                <div class="col-xs-6">
                  <p class="sm">
                    <i class="icon-globe"></i> - <%= @student.address %> 
                      <%= @student.zipcode %> <br/>
                  <i class="icon-envelope"></i> - <%= @student.email %>  
                  </p>
                </div><!-- col-xs-6 -->
                
                <div class="col-xs-6">
                  <p class="sm">
                    <i class="icon-phone"></i> - <%= @student.cell_phone %> <br/>
                    <i class="icon-home"></i> - <%= @student.home_phone %>  
                  </p>
                </div><!-- col-xs-6 -->
              </div><!-- row -->


                <ul class="list-group">
                    <li class="list-group-item"><strong>Birthdate: </strong><%= @student.birth_date %> <span class="pull-right"><strong>Age: </strong><%= @student.age %></span></li>
                    <li class="list-group-item"><strong>Social security number: </strong><%= @student.social_security_number %></li>
                    <li class="list-group-item"><strong>Church: </strong><%= @student.church %></li>
                    <li class="list-group-item"><strong>Point of Contact: </strong><%= @student.point_of_contact %></li>
                    <li class="list-group-item"><strong>Leadership Roles: </strong><%= @student.leadership_roles %></li>
                </ul>
            </div><!-- tab about -->
            
              <!-- ===== Second Tab ===== -->
            <div class="tab-pane" id="profile">
              <h4><i class="icon-file-text-alt"></i> Education</h4>
              <p class="sm">
                <grey>Grade Level</grey> | <%= @student.grade_level %>.<br/>
                <grey>Current School</grey> | <%= @student.current_school %>.<br/>
                <grey>Previous School</grey> | <%= @student.previous_school %>.<br/>
              </p>
              <h4><i class="icon-check"></i> Grades</h4>
              <p class="sm">
                <grey>Current Q1 Grades</grey> | A, B, C, F <br/>
                <grey>Current Q2 Grades</grey> | A, A-, B+, C <br/>
              </p>
            </div><!-- Tab Profile -->
            
              <!-- ===== Third Tab ===== -->
            <div class="tab-pane" id="portfolio">
              <div class="row">
                <div class ="container">
                  <h4>General</h4>
                  <p class="sm">
                    <grey>YMEN Start Date</grey> | <%= @student.ymen_start_date %>.<br/>
                  </p>
              <h4>Mentors</h4>
              <p class="sm">
                <grey>Number of Current Mentors</grey> | <%= @student.num_current_mentors %><br/>
                <grey>Names of Current Mentors</grey> | <%= @student.names_of_current_mentors %><br/>
              </p>
                </div>
              </div><!-- row -->
            </div><!-- /Tab Portfolio -->
            
              <!-- ===== Fourth Tab ===== -->
            <div class="tab-pane" id="contact">
              <div class="row">
                <div class ="container">
                  <h4>Misc</h4>
                    <p class="sm">
                      <grey>Resume Status: </grey><%= @student.resume_completed %> </br>
                      <grey>Other Organization Involvement: </grey><%= @student.other_organizations_involved %>
                    </p>
                  <h4>Family Notes</h4>
                    <p class="sm">
                      <%= @student.family_notes %>
                    </p>
                  <h4>Other Notes</h4>
                    <p class="sm">
                      <%= @student.other_notes %>
                    </p>
                </div>
              </div><!-- row -->
            </div><!-- Tab Contact -->

          <!-- ===== FIFTH Tab ===== -->
            <div class="tab-pane" id="parents">
              <div class="row">
                <div class ="container">
                    <h4>Parents</h4>
                    <hr>

                       <!-- List Parents -->
                      <% @myparents = @student.parents.first(2) %>
                      <% if @myparents.first.present? %>
                          <p class="sm"> <grey>Parent #1</grey> |  <%= link_to "#{@myparents.first.first_name} #{@myparents.first.last_name}", @myparents.first %></p>
                      <% else %>
                          <p> No first parent found. </p>
                      <% end %> 

                      
                      <% if @myparents.second.present? %>
                          <p class="sm"><grey>Parent #2</grey> | <%= link_to "#{@myparents.second.first_name} #{@myparents.second.last_name}", @myparents.second %> </p>
                      <% else %>
                          <p> No second parent found. </p>
                      <% end %>
                      <!-- END List Parents -->

                </div>
              </div><!-- row -->
            </div><!-- Tab Parents -->
            
          </div><!-- Tab Content -->
          </div><!-- col-md-8 -->
        </div><!-- row w -->
        </br>
        <p class="pull-right"><%= link_to 'Edit', edit_student_path(@student), :class=> "btn btn-warning" %> | <%= link_to 'Back', students_path, :class=> "btn btn-primary" %></p>
      </div><!-- col-lg-6 -->
    </div><!-- /.container -->
  </div><!-- /.row -->
<br />


<div class="row">
  <div class="container">
  <p id="notice"><%= notice %></p>

 




      <!-- Bootstrap core JavaScript
      ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <script src="assets/javascripts/jquery.js"></script>
      <script src="assets/javascripts/bootstrap.min.js"></script>
    <script>
    $('#myTab a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })  
    </script>    


  </div>
</div>
