<%= search_form_for @q do |f| %>
  <%= f.label :name_or_email_cont %>
  <%= f.search_field :first_name_or_last_name_or_email_cont, placeholder: "Search by name or email"%>
<% end %>
<h1>Listing students</h1>
<div class="table-responsive">
<table class="table table-striped">
<%= will_paginate  %>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Cell phone</th>
      <th>Birth date</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= link_to "#{student.first_name}", student %> </td>
        <td><%= link_to "#{student.last_name}", student %> </td>
        <td><%= student.cell_phone %></td>
        <td><%= student.birth_date %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <% if signed_in? && current_user.admin? %><td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
      </tr>
    <% end %>

  </tbody>

</table>
<%= will_paginate %>
</div>

<br>

<%= link_to 'New Student', new_student_path %>