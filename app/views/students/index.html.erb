<div class="row">
<%= search_form_for @q do |f| %>
  <%= f.label :name_or_email_cont %>
  <%= f.search_field :first_name_or_last_name_or_email_cont, placeholder: "Search by name or email"%>
<% end %>

<%= link_to 'New Student', new_student_path, :class => 'btn btn-success' %>
</div>
<h1>Listing students</h1>
<div class="table-responsive">
<table class="table table-striped">
<%= will_paginate  %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to "#{student.name}", student %> </td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-warning' %></td>
        <% if signed_in? && current_user.admin? %><td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td> <% end %>
      </tr>
    <% end %>

  </tbody>

</table>
<%= will_paginate %>
</div>

<br>

<%= link_to 'New Student', new_student_path, :class => 'btn btn-success' %>